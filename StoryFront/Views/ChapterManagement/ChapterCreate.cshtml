@{
    ViewData["Title"] = "List Chapter";
}
@model ObjectModel.Dtos.ChapterDTO

<section class="anime-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex text-white">
                    <div class="p-2">
                        <h3>Create Chapter</h3>
                    </div>
                </div>
            </div>
            <form asp-action="ChapterCreate">
                <div class="container border p-3">
                    <div class="row text-white">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-2">
                            <label asp-for="ListOfImage[0].ImageChapter" class="control-label pt-2" style="font-size:20px;"></label>
                        </div>
                        <div class="col-10 pb-3">
                            <input type="file" asp-for="ListOfImage[0].ImageChapter" class="form-control" />
                            <span asp-validation-for="ListOfImage[0].ImageChapter" class="text-danger"></span>
                        </div>
                        <div class="col-2">
                            <label asp-for="Index" class="control-label pt-2" style="font-size:20px;"></label>
                        </div>
                        <div class="col-10 pb-3">
                            <input type="number" asp-for="Index" class="form-control" />
                            <span asp-validation-for="Index" class="text-danger"></span>
                        </div>
                        <div class="col-5 offset-2">
                            <a asp-action="ChapterIndex" class="btn-primary btn form-control ">Back to List</a>
                        </div>
                        <div class="col-5">
                            <input type="submit" value="Create" class="btn btn-success form-control" />
                        </div>
                    </div>
                    <div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

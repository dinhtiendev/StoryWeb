@{
    ViewData["Title"] = "List Manga";
}

<section class="product-page spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex text-white">
                    <div class="p-2">
                        <h3>Mangas List</h3>
                    </div>
                    <div class="ml-auto p-2">
                        <a asp-action="MangaCreate" class="btn btn-outline-success">
                            Create New Manga
                        </a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered table-dark">
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Author</th>
                        <th>Content</th>
                        <th>Categories</th>
                        <th>View</th>
                        <th>CreateAt</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td width="50">1</td>
                        <td width="50">Name</td>
                        <th width="50"><img src="" alt="header" /></th>
                        <th width="50">Author</th>
                        <th>
                            <details>
                                <summary>Summary</summary>
                                <p class="text-white">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eleifend faucibus dui id interdum. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas.</p>
                            </details>
                        </th>
                        <th>Action, Manga</th>
                        <th width="50">View</th>
                        <th width="150">CreateAt</th>
                        <td width="200">
                            <a asp-controller="ChapterManagement" asp-action="ChapterIndex" class="btn btn-outline-primary btn-sm">
                                <span class="icon_pencil"></span> Manage chapter
                            </a>
                            <a asp-action="MangaEdit" class="btn btn-outline-primary btn-sm">
                                <span class="icon_pencil"></span> Edit
                            </a>
                            <a asp-action="MangaDelete" class="btn btn-outline-danger btn-sm">
                                <span class="icon_trash"></span> Delete
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>